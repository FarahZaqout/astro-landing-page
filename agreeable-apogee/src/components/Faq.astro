---
const { faqs } = Astro.props;
---
<section class="py-16 w-full">
  <div class="mx-auto px-4 max-w-6xl">
    <h2 class="mb-12 font-bold text-4xl text-center">Frequently Asked Questions</h2>
    <div class="gap-6 grid grid-cols-1 md:grid-cols-2">
      {faqs.map((faq: {question: string; answer: string;}) => (
        <div class="relative bg-white shadow-lg p-6 rounded-lg">
          <!-- Left Vertical Line -->
          <div class="top-0 left-0 absolute bg-confider-bgPrimary rounded w-1 h-full"></div>
          <!-- Content -->
          <h3 class="mb-2 font-semibold text-xl">{faq.question}</h3>
          <p class="text-gray-600">{faq.answer}</p>
        </div>
      ))}
    </div>
  </div>
</section>
